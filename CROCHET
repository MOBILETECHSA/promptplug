  <script>
    // small JS interactions
    document.getElementById('year').textContent = new Date().getFullYear();

    function openModal(pid){
      const content = {
        p1:{title:'Turquoise Scarf',desc:'Lightweight, breathable, perfect for layering.',price:'$28'},
        p2:{title:'Chunky Throw Blanket',desc:'Oversized and cozy. Custom colors.',price:'$95'},
        p3:{title:'Cozy Mitts',desc:'Hypoallergenic yarn options.',price:'$18'},
        p4:{title:'Baby Cocoon',desc:'Machine-washable options available.',price:'$45'},
        p5:{title:'Ear Warmer Headband',desc:'Comfortable and stretchy.',price:'$14'},
        p6:{title:'Trio Coasters',desc:'Set of three coasters.',price:'$12'},
        p7:{title:'Neck Warmer',desc:'Compact and cozy.',price:'$22'},
        p8:{title:'Gift Set',desc:'Curated gift box: beanie, mitts, and coasters.',price:'$60'}
      };
      const d = content[pid] || {title:'Product',desc:'Details coming soon',price:'--'};
      document.getElementById('modalContent').innerHTML = `<h3>${d.title}</h3><p class=\"muted\">${d.desc}</p><div style=\"font-weight:800;color:var(--turquoise)\">${d.price}</div><div style=\"margin-top:10px\"><a class=\"btn\" href=\"#\">Buy</a> <a class=\"nav-link\" href=\"#\">More details</a></div>`;
      const m = document.getElementById('modal');
      m.style.visibility='visible';m.style.opacity=1;m.setAttribute('aria-hidden','false');
    }
    function closeModal(){const m=document.getElementById('modal');m.style.opacity=0;setTimeout(()=>{m.style.visibility='hidden';m.setAttribute('aria-hidden','true')},220)}

    // mock custom order submit
    function submitCustomOrder(){
      const name = document.getElementById('name').value || '—';
      const email = document.getElementById('email').value || '—';
      document.getElementById('formMsg').textContent = `Thanks ${name}! Request received. We will contact you at ${email} (mock).`;
      // TODO: replace with real POST to form handler or Zapier/Google Sheets
    }

    // smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click',e=>{
        const href = a.getAttribute('href');
        if(href.length>1){
          e.preventDefault();
          const el = document.querySelector(href);
          if(el){el.scrollIntoView({behavior:'smooth',block:'start'})}
        }
      })
    })

    // respect prefers-reduced-motion
    const media = window.matchMedia('(prefers-reduced-motion: reduce)');
    if(media.matches){
      document.querySelectorAll('.card').forEach(c=>c.style.transition='none');
    }
  </script>
</body>
</html>
